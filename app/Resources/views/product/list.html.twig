<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Liste des produits{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap4/bootstrap.min.css') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}
</head>
<body>
{% block body %}

    <table class="table-responsive">
        <thead>
        <tr>
            <th>id</th>
            <th>product</th>
            <th>libelle</th>
            <th>price</th>
            <th>category</th>
            <th>actions</th>
        </tr>
        </thead>

        <tbody>
        {% for product in products %}

            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.product }}</td>
                <td>{{ product.libelle }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.category }}</td>
                <td><a href="{{ path('edit_product', {'id':product.id}) }}" class="btn btn-default">Edit</a></td>
                <td><a href="{{ path('show_product', {'id':product.id}) }}" class="btn btn-default">Show</a></td>
                <td><a href="{{ path('delete_product', {'id':product.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}


{% block javascripts %}
    <script src="{{ asset('bootstrap4/bootstrap.min.js') }}"></script>
{% endblock %}

</body>
</html>

