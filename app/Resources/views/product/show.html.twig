<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Editer produit{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap4/bootstrap.min.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}
</head>
<body>

{% block body %}

    <table class="table">
        <tbody>
        <tr>
            <td>{{ form.id }}</td>
        </tr>
        <tr>
            <td>{{ form.product }}</td>
        </tr>
        <tr>
            <td>{{ form.libelle }}</td>
        </tr>
        <tr>
            <td>{{ form.price }}</td>
        </tr>
        <tr>
            <td>{{ form.category }}</td>
        </tr>
        <tr>
            <td><a href="{{ path('list_product') }}">Annuler</a> </td>
        </tr>
        <tr>
            <td>
                {{ form_start(delete) }}
                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this item?');">
                    <span class="glyphicon glyphicon-trash"></span> Delete</button>
                {{ form_end(delete) }}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bootstrap4/bootstrap.min.js') }}"></script>
{% endblock %}

</body>
</html>