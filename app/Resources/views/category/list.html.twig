<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Liste des matieres{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bootstrap4/bootstrap.min.css') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}
</head>
<body>


{% block body %}

    <table class="table-responsive">
        <thead>
        <tr>
            <th>id</th>
            <th>category</th>
            <th>actions</th>
        </tr>
        </thead>

        <tbody>
        {% for categorie in categories %}

            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.category }}</td>
                <td><a href="{{ path('edit_category', {'id':categorie.id}) }}" class="btn btn-default">Edit</a></td>
                <td><a href="{{ path('delete_category', {'id':categorie.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bootstrap4/bootstrap.min.js') }}"></script>
{% endblock %}

</body>
</html>

